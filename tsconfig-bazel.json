{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "es2015",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "allowJs": false,
    "sourceMap": true,
    "target": "ES2019",
    "lib": ["es2019", "dom", "webworker.importscripts"],

    "outDir": "build",
    "declaration": true,
    "experimentalDecorators": true,
    "incremental": false,
    "noErrorTruncation": true
  },
  "exclude": [
    "src/platform/devtools-*",
    "src/**/devtools/**",
    "src/**/devtools-connector/**",
    "src/platform/tf-node.ts",
    "src/platform/pouch*",
    "src/platform/image-node.ts",
    "src/gen/**/*.ts",
    "src/**/storageNG/testing/**",
    "src/**/tests/**",
    "src/**/time/tests/**",
    "src/**/manual_tets/**",
    "src/**/test/**",
    "src/**/keymgmt/testing/**",
    "src/**/firebase*",
    "src/**/testing/test-helper.ts",
    "src/planning/testing/**",
    "src/runtime/testing/callback-tracker.ts",
    "src/**/services/**",
    "src/**/tools/**",
    "src/**/cli/**",
    "src/**/keymgmt/webcrypto.ts",
    "src/**/keymgmt/manager.ts",
    "src/**/webmain.ts",
    "src/platform/protobuf*",
  ]
}
